script(type='text/javascript)
  $(document).ready(function(){
    now.name = '#{username}';

    now.ready(function() {
      now.join('#{roomname}');
      $('roomname').attr('href', '/rooms/#{roomname}');
    });
  });

  $(window).unload(function() {
    now.leave('#{roomname}');
  });

#channel
  #frame
    #users
    #chat-log
      #status
        #roomstat
          a#roomname #{roomname}
      #transcript
        #chattr

#chatbox
  form#entry
    textarea#message(type='text', name='message', autocomplete='off')
script(type='text/javascript', src='/javascripts/client.js')
